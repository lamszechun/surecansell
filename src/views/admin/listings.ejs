<!DOCTYPE html>
<html>
<head>
    <title>Admin - Listings</title>
    <%- include('../header'); -%>
</head>
<body>
<div class="row">
    <div class="col col-2">
        <%- include('../admin_nav'); %>
    </div>
    <div class="col">
        <div class="container">
            <br />
            <h4>Listings</h4>
            <br />
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price($)</th>
                        <th>Condition</th>
                        <th>Seller</th>
                    </tr>
                </thead>
                <tbody>
                    <% listings.forEach((listing) => { %>
                        <tr>
                            <td><a href="/listings/<%= listing.id %>"><%= listing.title %></a></td>
                            <td><%= listing.description %></td>
                            <td><%= listing.price_in_cents/100 %>.<%= (listing.price_in_cents%100).toString().padStart(2, '0') %></td>
                            <td><%= listing.condition %></td>
                            <td><%= listing.seller_name %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>