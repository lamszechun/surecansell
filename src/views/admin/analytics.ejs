<!DOCTYPE html>
<html>
<head>
    <title>Admin - Analytics</title>
    <%- include('../header'); -%>
</head>
<body>
<div class="row">
    <div class="col col-2">
        <%- include('../admin_nav'); %>
    </div>
    <div class="col">
        <div class="container">

            <h4> Total Number of Purchases So far</h4>
            <% purchases.forEach((purchase) => { %>
                <%= purchase %>
            <% }) %>


            <h4> Each Buyerâ€™s Total Spending Amount in descending order</h4>
            <tbody>
                <% spending.forEach((spend) => { %>
                    <tr>
                        <td><a href="/listings/<%= spend.buyer_id %>"></a></td>
                        <td><%= spend.price_in_cents %></td>
                    </tr>
                <% }) %>
            </tbody>

            <h4> Highest Listing amount </h4>
            <% expensive.forEach((highest) => { %>
                <%= highest.price_in_cents %>
            <% }) %>

        </div>
    </div>
</div>
</body>
</html>