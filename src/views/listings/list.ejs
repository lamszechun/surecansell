<!DOCTYPE html>
<html>
    <head>
        <title>Listings</title>
        <%- include('../header'); -%>
    </head>
    <body>
        <div>Listings:</div>
        <div class="container">
            <div class="row">
                <% listings.forEach((listing) => { %>
                        <div class="col col-sm-3">
                            <a href="/listings/<%= listing.id %>/">
                                <div class="card">
                                    <div class="card-body">
                                        <img class="img-thumbnail" src="https://placekitten.com/g/200/200" alt="kitty" />
                                        <p class="card-text">ID: <%= listing.id %></p>
                                        <p>Title: <%= listing.title %></p>
                                        <p>Description: <%= listing.description %></p>
                                        <p>Seller: <%= listing.lister_id %></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>