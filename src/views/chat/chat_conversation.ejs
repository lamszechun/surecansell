<!DOCTYPE html>
<html>
<head>
    <title>Display Chat Conversation</title>
    <%- include('../header'); -%>
</head>
<body>

<!-- TODO: Not sure about the ejs portion-->

<!--To Display a specific conversation and its messages -->
<%- include('../navbar'); %>
    <div>View Chat Conversation:</div>
<!-- Display conversation details of the specific conversation-->
    <div class="container">
        <div class="row">
            <% chat_conversations.forEach((conversation) => { %>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">

                                <p>Chat Conversation ID: <%= conversation.id %></p>
                                <p>Listing ID: <%= comment.listing_id %></p>
                                <p>Seller ID: <%= comment.seller_id %></p>
                                <p>Buyer ID: <%= comment.seller_id %></p>
                            </div>
                        </div>
                    </div>
            }) %>
            <!-- Not sure if line 26 is correct-->
        </div>
    </div>

<!-- Display the messages for that specific conversation -->

    <div class="container">
        <div class="row">
            <% chat_message.forEach((message) => { %>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">

                                <p>Message ID: <%= message.id %></p>
                                <p>Message Text: <%= message.body %></p>
                                <p>Conversation ID: <%= message.conversation_id %></p>
                                <p>User ID: <%= message.user_id %></p>
                            </div>
                        </div>
                    </div>
            }) %>
            <!-- Not sure if line 47 is correct-->
        </div>
    </div>



</body>
</html>